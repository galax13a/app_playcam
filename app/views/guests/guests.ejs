<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> PlaycamHub- Guests Chaturbate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/modules/boxicons/css/boxicons.min.css">
    <link rel="stylesheet" href="/css/exhibitionist.css">
    <script defer src="/js/renders/Vue-guests.js"></script>
    <script defer src="/modules/htmx.org/dist/htmx.min.js"></script>
    <link rel="icon" href="/images/logo2.png" type="image/png">
    <script defer src="/js/lib/vue2.js"></script>
    <script defer src="/modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div class="container mt-2">
        <div class="container text-center text-white mb-3">
            <h1> PlayCam<span class="logis">Hub</span> - Guest Cams</h1>
            <h6>App <span class="badge bg-secondary shadow-md">V 1.0</span></h6>
        </div>
        <!-- #app -->
        <div id="app">

            <!-- Modal -->
            <div class="modal fade " id="botStats" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content bg-black bg-opacity-75 text-warning">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">ðŸ‘¾ CB * Bots Top 100 Models Stats</h5>
                            <button type="button" class="btn-close bg-danger" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body ">

                            <ul>
                                <li v-for="(result, index) in botStatsResults" :key="result.username"
                                    style="list-style-type: none; display: flex; align-items: center;">
                                    <div>
                                        <h3 v-if="index === 0">ðŸ¥‡</h3>
                                        <h3 v-else-if="index === 1">ðŸ¥ˆ</h3>
                                        <h3 v-else-if="index === 2">ðŸ¥‰</h3>
                                        <h3 class="mx-2" v-else>{{ (index + 1) }} </h3>
                                    </div>
                                    <div id="resultModels" class="mb-1">
                                        <img :src="result.image_url" alt="Avatar" class="rounded-circle mb-1 mx-2"
                                            width="50" height="50">
                                        <strong class="text-uppercase">
                                            {{ result.username }}
                                        </strong>
                                        <span class="badge bg-success">
                                            {{ formatNumber(result.num_users) }}
                                        </span>
                                        <span> Views / Guests Aprox. </span>
                                        <span class="badge bg-danger">
                                            {{ formatNumber(Math.round(result.num_users * 0.73)) }}
                                        </span>
                                        ðŸ‘»

                                    </div>
                                </li>

                            </ul>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-dark bg-opacity-25"
                                data-bs-dismiss="modal">Close</button>

                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-6" id="cams-exhibitionist">
                    <ul class="list-group list-group-flush w-100">
                        <li v-for="(guest, index) in visitedUsers" :key="index"
                            class="list-group-item exhibitionist-item shadow rounded-3 bg-opacity-25 bg-dark">
                            <div class="exhibitionist-details">
                                <i :class="getGuestIconClass(index)" style="font-size: 4rem;"></i>
                                <div class="exhibitionist-info mx-4 text-start">
                                    <h4 class="card-title nameTag">
                                        <i class="bx bxs-webcam fs-5"></i>
                                        <span>{{ (index + 1) }} Guest</span>
                                    </h4>
                                    <p class="card-text">Location: Chaturbate</p>
                                </div>
                            </div>
                        </li>
                    </ul>


                </div>

                <div class="col-6">
                    <div class="container p-3 m-2 shadow rounded-3 bg-black bg-opacity-50 text-warning ">
                        <form>
                            <div class="mb-3">
                                <label class="form-label">Cam Site / <strong class="text-uppercase">
                                        {{ idcam }}</strong></label>
                                <select class="form-select" v-model="idcam" required>
                                    <option disabled value="">Please select website</option>
                                    <option value="chaturbate">Chaturbate.com</option>
                                    <option value="stripchat">Stripchat.com</option>
                                    <option value="camsoda">Camsoda.com</option>
                                    <option value="cam4">Cam4.com</option>
                                </select>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-6">
                                            <label for="nickmodel">Nick Model</label>
                                            <input type="text" id="nickmodel" name="nickmodel" v-model="nick"
                                                class="form-control mb-3 w-100">
                                        </div>

                                        <div class="col-6">
                                            <label for="nickmodel">Models</label>
                                            <div class="bg-black bg-opacity-50 p-1 rounded-2 shadow">
                                                <i class='bx bx-add-to-queue fs-3' data-bs-toggle="offcanvas"
                                                    href="#offcanvasAddmodels" title="Add Model"></i>
                                                <i id="botStatsTop" data-bs-toggle="modal" data-bs-target="#botStats"
                                                    title="Bots Tops Stats " class='bx bx-objects-horizontal-left fs-3'>
                                                </i>
                                                <i title="Bots Models" class='bx bxs-objects-vertical-bottom fs-3'></i>
                                                <i title="Apps " class='bx bx-cube-alt fs-3' title="Apps "></i>
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                </div>

                                <label class="form-label">Send Guests</label>
                                ( <span>{{ 'Bots ' + (this.num_guests - 1 ) }}</span> )
                                <select class="form-select mb-2" v-model="guests" required @change="handleGuestsChange">
                                    <option disabled value="">Please select one</option>
                                    <option value="3">3 Bots - Free</option>
                                    <option value="5">5 Bots - Free</option>
                                    <option value="10">10 Bots - Free</option>
                                    <option value="ilimit">100 Ilimit Bots - PRO</option>
                                </select>
                                <a v-if="guests === 'ilimit'" href="#" id="link-licencie">Key </a>
                                <input v-if="guests === 'ilimit'" type="number" class="form-control"
                                    v-model="ilimitValue" min="1" placeholder="Enter number of bots" required>

                            </div>

                            <button type="submit" class="btn btn-danger shadow d-none">Create Bots</button>
                        </form>
                    </div>

                    <div id="trafico" class="container p-3 m-2 shadow rounded-3 bg-black bg-opacity-50 text-warning">
                        <label for="interval-select">Select Interval:</label>
                        <select id="interval-select" class="form-select mb-2" v-model="selectedInterval">
                            <option value="3">Every 3 seconds</option>
                            <option value="5">Every 5 seconds</option>
                            <option value="10">Every 10 seconds</option>
                            <option value="15">Every 15 seconds</option>
                            <option value="20">Every 20 seconds</option>
                            <option value="30">Every 30 seconds</option>
                            <option value="40">Every 40 seconds</option>
                            <option value="60">Every 60 seconds</option>
                            <option value="120">Every 2 minutes</option>
                            <option value="180">Every 3 minutes</option>
                        </select>
                        <label for="interval-selectedCloseWin">Close Guests Cam :</label>
                        <select id="interval-selectedCloseWin" class="form-select mb-3" v-model="selectedCloseWin">
                            <option value="600">Every 10 minutes</option>
                            <option value="1200">Every 20 minutes</option>
                            <option value="1800">Every 30 minutes</option>
                            <option value="2400">Every 40 minutes</option>
                            <option value="3000">Every 50 minutes</option>
                            <option value="3600">Every 60 minutes</option>
                        </select>

                        <button :disabled="isLoading"
                            class="btn btn-success bg-success w-100 shadow bg-opacity-50 shadow-lg"
                            @click="startTraffic">Start Traffic
                            (Guest {{ this.num_traffic_guests }})
                            <div v-if="isLoading">
                                <i class='bx bx-loader-circle bx-spin fs-4'></i>
                                <span> Worker Start ... </span>
                            </div>

                        </button>
                        <div class="container text-center">
                            <ul v-if="isLoading" class="mb-4 shadow rounded-3 p-2">
                                <span class="text-capitalize">Visit: ðŸ’œ
                                    PLayCam
                                    ( {{ this.num_traffic_guests }} )
                                    <i class='bx bxs-ghost bx-burst fs-6'></i>
                                </span>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-start  bg-dark shadow bg-opacity-50" tabindex="-1" id="offcanvasAddmodels"
        aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-warning shadow" id="offcanvasAddmodels_title">Models</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                <p class="text-white">you can add different cams and search for them and send support viewers to their
                    room again</p>
                <div class="container">
                    <label for="">Nick Model</label>
                    <input class="form-control mb-3" v-model="input_model" min="3" placeholder="Enter Name Nick"
                        required>
                    <button class="btn btn-primary  bg-dark w-100 shadow bg-opacity-50 " type=""
                        id="btn-add-model-guest">Add Model</button>

                </div>

            </div>

        </div>
    </div>

    `

    <style>
        body {
            background: linear-gradient(89.7deg, rgb(120, 15, 141) 2.8%, rgba(228, 134, 13, 0.678) 97.8%);
        }
    </style>
</body>

</html>