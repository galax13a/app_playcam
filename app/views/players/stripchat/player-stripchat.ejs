<!-- player-stripchat.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Playcam Stripchat </title>    
    <link href="https://vjs.zencdn.net/7.15.4/video-js.css" rel="stylesheet" />
    <script src="https://vjs.zencdn.net/7.15.4/video.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/videojs-contrib-hls/5.15.0/videojs-contrib-hls.min.js"></script>
</head>
<style>
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        font-family: Arial, sans-serif;
        background-color: #292626;
    }
</style>
<body>
    <video id="my-video" class="video-js" controls autoplay preload="auto" width="480" height="460">
    </video>
    <script>

        var player = videojs('my-video', {
            autoplay: true,
            controls: true,
            fluid: true, // Hace que el reproductor sea responsive
            playbackRates: [0.5, 1, 1.5, 2], // Opcional: permite cambiar la velocidad de reproducción
            muted:true,
            volume: 0.15, // Establece el volumen inicial al 20%
            sources: [{
                src: "<%= url_player %>", // URL del archivo .m3u8
                type: 'application/x-mpegURL', // Tipo de archivo HLS
                label: '480p', // Etiqueta para la calidad del video
                res: '480' // Resolución del video
            }]
        });
    </script>
</body>
</html>
